<% if user_signed_in? %> 
  <% if restaurant.liked_by?(current_user) %>
    <%= link_to(restaurant_add_path(restaurant), method: :delete, remote: true, id: :"like-button-#{restaurant.id}") do %>
        <i class="fa-lg fas fa-heart icon-btn liked" style="color: red;">❤︎</i>
    <% end %>
  <% else %>
    <%= link_to(restaurant_add_path(restaurant), method: :post, remote: true, id: :"like-button-#{restaurant.id}") do %>
        <i class="fa-lg fas fa-heart icon-btn not-like">❤︎</i>
    <% end %>
  <% end %>

  <%= restaurant.like_ids.count %>
<% end %>
