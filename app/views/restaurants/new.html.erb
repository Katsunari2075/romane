<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規投稿</h2>
        <%= form_with model:@restaurant, local: true do |f|%>
          <div class="field">
            <%= f.label :store_name, "店名" %><br />
            <%= f.text_field :store_name %>
          </div>

          <div class="field">
            <%= f.label :address, "住所" %><br />
            <%= f.text_field :address, class: :form__text %>
          </div>

          <div class="field">
            <%= f.label :hoge, "コンセプト" %><br />
            <%= f.text_area :hoge, class: :form__text %>
          </div>

          <div class="field">
            <%= f.label :hoge, "プロトタイプの画像" %><br />
            <%= f.file_field :hoge %>
          </div>

          <div class="actions">
            <%= f.submit "保存する", class: :form__btn  %>
          </div>
        <% end %>
    </div>
  </div>
</div>